<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	Title="Shhh..."
	x:Class="TopSecret.LoginPage">
	<ScrollView>
		<VerticalStackLayout
			Padding="30,50,30,0"
			Spacing="25"
			VerticalOptions="StartAndExpand">

			<Label x:Name="ErrorMessage" />

			<Entry
				x:Name="Password"
				BackgroundColor="AliceBlue"
				HorizontalOptions="FillAndExpand"
				IsPassword="True"
				IsVisible="True"
				Keyboard="Plain"
				Placeholder="Password"
				WidthRequest="200" />

			<Button
				x:Name="btnLogin"
				Clicked="OpenSesame"
				FontAttributes="Bold"
				HorizontalOptions="Center"
				ImageSource="top_secret_icon.png"
				SemanticProperties.Description="Engage!"
				SemanticProperties.Hint="This is the way." />
		</VerticalStackLayout>
	</ScrollView>

</ContentPage>
